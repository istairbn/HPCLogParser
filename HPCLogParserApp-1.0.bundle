<Bundle name="HPCLogParserApp" version="1.0" system="false">
  <status>UNINSTALLED</status>
  <owner>ben.newton@excelian.com</owner>
  <services>
	<Service>
	    <name>HPCParser</name>
		<resourceSelection>type contains headnode</resourceSelection>
	    <fork>true</fork>
	    <background>true</background>
		<instanceCount>-1</instanceCount>
		<pauseSeconds>14400</pauseSeconds>
		<script>logparser.groovy HEADNODE.properties</script>
    </Service>
	</services>
</Bundle>
